<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/com_anqusdk_dialog_bg"
    android:paddingBottom="10dp" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" 
        android:padding="5dp">

        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:text="@string/anqu_confirmexit"
            android:textColor="#5d5d5d"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textlable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_below="@+id/dialog_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:text="@string/anqu_abandonpay"
            android:textColor="#5d5d5d"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textlable"
            android:layout_marginTop="24dp"
            android:background="@drawable/com_anqupay_line" />

        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/exit_btn_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/com_anqupay_exit_btn_selector"
                android:gravity="center"
                android:layout_marginRight="8dp"
                android:text="@string/anqu_cancel"
                android:textColor="#5d5d5d"
                android:textSize="15sp" />

            <Button
                android:id="@+id/exit_btn_certain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/com_anqupay_pay_btn_selector"
                android:gravity="center"
                android:text="@string/anqu_ensure"
                android:textColor="#ffffff"
                android:textSize="15sp" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>